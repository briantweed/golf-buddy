{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "schemas/add-contact.schema.json",
    "title": "Add User Form Schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "ContactName": {
            "type": "string"
        },
        "Role": {
            "type": "string"
        },
        "Title": {
            "type": "string"
        },
        "Email": {
            "type": "string"
        },
        "Specialties": {
            "type": ["array","string"]
        },
        "Responsibility": {
            "type": ["array","string"]
        },
        "States": {
            "type": ["array","string"]
        },
        "Divisions": {
            "type": ["array","string"]
        },
        "Branches": {
            "type": ["array","string"]
        },
        "Telephones": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "Type",
                    "Number"
                ],
                "additionalProperties": false,
                "properties": {
                    "Type": {
                        "type": "string"
                    },
                    "Number": {
                        "type": "string"
                    },
                    "Extension": {
                        "type": ["number", "null"]
                    }
                }
            }
        }
    }
}
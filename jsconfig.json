{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@api/*": ["src/api/*"],
            "@components/*": ["src/components/*"],
            "@files/*": ["src/files/*"],
            "@hoc/*": ["src/hoc/*"],
            "@hooks/*": ["src/hooks/*"],
            "@libraries/*": ["src/libraries/*"],
            "@public/*": ["public/*"],
            "@methods/*": ["src/methods/*"]
        }
    },
    "exclude": ["node_modules"]
}
